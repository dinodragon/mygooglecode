<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <!--name属性也很重要，是表示接口的实现类-->
      <service name="WCF_Server.WCFFunction" behaviorConfiguration="FunServiceBehavior">
        <endpoint
          address="net.tcp://localhost/Fun"
          binding="netTcpBinding"
          contract="WCF_Server.IWCFInterface" />
        <endpoint
          address=""
          binding="basicHttpBinding"
          contract="WCF_Server.IWCFInterface"/>
        
        <!--让basicHttpBinding可以当做WebService来访问需要配置baseAddresses项-->
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:9593/Fun"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="FunServiceBehavior">
          <serviceMetadata httpGetEnabled="True"/>
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>